{
  "name": "korta-backend",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "packageManager": "pnpm@10.6.2",
  "scripts": {
    "dev": "dotenv -e .env.development -- NODE_ENV=development ENV_FILE=.env.development tsx watch src/main.ts",
    "start": "tsx src/main.ts",
    "start:prod": "ENV_FILE=.env.production NODE_ENV=production tsx src/main.ts",
    "build": "dotenv -e .env.development -- prisma generate && tsc",
    "test": "vitest --config vitest.config.ts",
    "test:coverage": "vitest --config vitest.config.ts --coverage",
    "test:local": "dotenv -e .env.development -- sh -c 'NODE_ENV=test ENV_FILE=.env.development DATABASE_URL=\"${TEST_DATABASE_URL:-postgresql://postgres:postgres@localhost:5432/korta_test}\" vitest run --config vitest.config.ts'",
    "test:local:coverage": "dotenv -e .env.development -- sh -c 'NODE_ENV=test ENV_FILE=.env.development DATABASE_URL=\"${TEST_DATABASE_URL:-postgresql://postgres:postgres@localhost:5432/korta_test}\" vitest run --config vitest.config.ts --coverage'",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "prisma:generate": "dotenv -e .env.development -- prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "db:migrate": "dotenv -e .env.development -- prisma migrate dev",
    "db:deploy": "dotenv -e .env.development -- prisma migrate deploy",
    "db:status": "dotenv -e .env.development -- prisma migrate status",
    "db:deploy:test": "dotenv -e .env.development -- sh -c 'DATABASE_URL=\"${TEST_DATABASE_URL:-postgresql://postgres:postgres@localhost:5432/korta_test}\" prisma migrate deploy'",
    "prisma:studio": "prisma studio",
    "db:studio": "dotenv -e .env.development -- NODE_ENV=development prisma studio"
  },
  "devDependencies": {
    "@biomejs/biome": "2.4.4",
    "@faker-js/faker": "^10.3.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.3.2",
    "@types/passport": "^1.0.17",
    "@types/passport-google-oauth20": "^2.0.17",
    "@types/supertest": "^7.2.0",
    "dotenv-cli": "^11.0.0",
    "prisma": "^7.4.2",
    "supertest": "^7.2.2",
    "tsx": "^4.21.0",
    "typescript": "~5.9.3",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "@prisma/adapter-pg": "^7.4.2",
    "@prisma/client": "^7.4.2",
    "argon2": "^0.44.0",
    "cors": "^2.8.6",
    "dotenv": "^17.3.1",
    "express": "^5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.3",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "resend": "^6.9.2",
    "uuid": "^13.0.0",
    "zod": "^4.3.6"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@prisma/engines",
      "argon2",
      "esbuild",
      "prisma"
    ]
  }
}
