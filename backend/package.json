{
  "name": "clean-cut-backend",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "packageManager": "pnpm@10.6.2",
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "dev:local": "dotenv -e .env.development -- NODE_ENV=development ENV_FILE=.env.development tsx watch src/main.ts",
    "start": "tsx src/main.ts",
    "start:prod": "ENV_FILE=.env.production NODE_ENV=production tsx src/main.ts",
    "build": "prisma generate && tsc",
    "test": "vitest --config vitest.config.ts",
    "test:coverage": "vitest --config vitest.config.ts --coverage",
    "test:local": "dotenv -e .env.development -- sh -c 'NODE_ENV=test ENV_FILE=.env.development DATABASE_URL=\"${TEST_DATABASE_URL:-postgresql://postgres:postgres@localhost:5432/cleancut_test}\" vitest run --config vitest.config.ts'",
    "test:local:coverage": "dotenv -e .env.development -- sh -c 'NODE_ENV=test ENV_FILE=.env.development DATABASE_URL=\"${TEST_DATABASE_URL:-postgresql://postgres:postgres@localhost:5432/cleancut_test}\" vitest run --config vitest.config.ts --coverage'",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "prisma:generate": "prisma generate",
    "prisma:generate:local": "dotenv -e .env.development -- prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:dev:local": "dotenv -e .env.development -- prisma migrate dev",
    "prisma:migrate:deploy:local": "dotenv -e .env.development -- prisma migrate deploy",
    "prisma:migrate:status:local": "dotenv -e .env.development -- prisma migrate status",
    "prisma:migrate:deploy:test:local": "dotenv -e .env.development -- sh -c 'DATABASE_URL=\"${TEST_DATABASE_URL:-postgresql://postgres:postgres@localhost:5432/cleancut_test}\" prisma migrate deploy'",
    "prisma:studio": "prisma studio",
    "prisma:studio:local": "dotenv -e .env.development -- NODE_ENV=development prisma studio",
    "legacy:dev": "nodemon --watch . --ext js --exec node index.js"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.14",
    "@faker-js/faker": "^10.2.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-rate-limit": "^6.0.2",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.20",
    "@types/passport": "^1.0.16",
    "@types/passport-google-oauth20": "^2.0.14",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.8",
    "dotenv-cli": "^8.0.0",
    "nodemon": "^3.1.9",
    "prisma": "^7.1.0",
    "supertest": "^6.3.4",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vitest": "^1.3.0"
  },
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "@prisma/adapter-pg": "^7.3.0",
    "@prisma/client": "^7.1.0",
    "argon2": "^0.41.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "resend": "^6.9.2",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@prisma/engines",
      "argon2",
      "better-sqlite3",
      "esbuild",
      "prisma"
    ]
  }
}
