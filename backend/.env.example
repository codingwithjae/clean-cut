# Backend env file resolution:
# - Defaults to .env.development
# - Uses .env.production when NODE_ENV=production
# - Override explicitly with ENV_FILE=.env.some-file

# Common runtime overrides
NODE_ENV=development
PORT=5000

# Required core
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/mydatabase
JWT_SECRET=change-me-strong-secret
# JWT_SECRET_KEY=change-me-strong-secret
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/v1/auth/google/callback

# Production-required for email sending
RESEND_API_KEY=re_your_resend_api_key

# Recommended
FRONTEND_URL=http://localhost:5173
# Optional: comma-separated allowlist. If unset, backend falls back to FRONTEND_URL.
CORS_ORIGINS=http://localhost:5173
# Defaults to noreply@korta.click when unset.
EMAIL_FROM=noreply@korta.click
# Set to 1 behind a single reverse proxy (for example Railway).
TRUST_PROXY_HOPS=0

# Optional test/tooling
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/korta_test
SHADOW_DATABASE_URL=postgresql://postgres:postgres@localhost:5432/korta_shadow

# Optional rate limit overrides (defaults are usually enough)
# RATE_LIMIT_PUBLIC_SHORTEN_WINDOW_MS=3600000
# RATE_LIMIT_PUBLIC_SHORTEN_MAX=100
# RATE_LIMIT_REDIRECT_WINDOW_MS=300000
# RATE_LIMIT_REDIRECT_MAX=300
# RATE_LIMIT_AUTH_LOGIN_WINDOW_MS=900000
# RATE_LIMIT_AUTH_LOGIN_MAX=10
# RATE_LIMIT_AUTH_REGISTER_WINDOW_MS=900000
# RATE_LIMIT_AUTH_REGISTER_MAX=5
# RATE_LIMIT_AUTH_FORGOT_PASSWORD_WINDOW_MS=900000
# RATE_LIMIT_AUTH_FORGOT_PASSWORD_MAX=5
# RATE_LIMIT_AUTH_RESET_PASSWORD_WINDOW_MS=900000
# RATE_LIMIT_AUTH_RESET_PASSWORD_MAX=10
# RATE_LIMIT_AUTH_API_KEY_REGENERATE_WINDOW_MS=900000
# RATE_LIMIT_AUTH_API_KEY_REGENERATE_MAX=5
